<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- 프로퍼티 정의 -->
    <springProperty scope="context" name="springAppName" source="spring.application.name"/>
    <springProperty scope="context" name="springProfile" source="spring.profiles.active" defaultValue="local"/>
    
    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <timestamp>
                    <pattern>yyyy-MM-dd'T'HH:mm:ss.SSSXXX</pattern>
                    <timeZone>Asia/Seoul</timeZone>
                </timestamp>
                <logLevel/>
                <loggerName/>
                <mdc/>
                <message/>
                <stackTrace/>
                <pattern>
                    <pattern>
                        {
                        "service": "${springAppName:-unknown}",
                        "profile": "${springProfile:-local}",
                        "traceId": "%X{requestId:-}",
                        "orderId": "%X{orderId:-}",
                        "userId": "%X{userId:-}",
                        "userRole": "%X{userRole:-}",
                        "clientIp": "%X{clientIp:-}",
                        "sessionId": "%X{sessionId:-}",
                        "thread": "%thread",
                        "logType": "%X{logType:-default}"
                        }
                    </pattern>
                </pattern>
            </providers>
        </encoder>
    </appender>
    
    <!-- Application 로그 파일 (모든 로그를 하나의 파일에) -->
    <appender name="APPLICATION_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>/var/log/app/${springAppName:-application}.log</file>
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <timestamp>
                    <pattern>yyyy-MM-dd'T'HH:mm:ss.SSSXXX</pattern>
                    <timeZone>Asia/Seoul</timeZone>
                </timestamp>
                <logLevel/>
                <loggerName/>
                <mdc/>
                <message/>
                <stackTrace/>
            </providers>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>/var/log/app/${springAppName:-application}.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- 프로필별 로그 설정 -->
    <springProfile name="local,dev,docker,aws">
        <logger name="com.eatcloud" level="INFO"/>
        
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="APPLICATION_FILE"/>
        </root>
    </springProfile>

    <springProfile name="prod">
        <logger name="com.eatcloud" level="INFO"/>
        
        <root level="INFO">
            <appender-ref ref="APPLICATION_FILE"/>
        </root>
    </springProfile>
    
</configuration>